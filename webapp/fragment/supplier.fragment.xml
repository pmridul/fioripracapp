<core:FragmentDefinition  xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
        <Table id="idTable" items="{/suppliers}" itemPress="onItemPress">
         <headerToolbar>
         <Toolbar >
          <ToolbarSpacer ></ToolbarSpacer>
          <Button icon="sap-icon://filter" 
                  tooltip="Filter Supplier data"
                  press="onSupplierFilter"></Button>
         </Toolbar>
         </headerToolbar>

          <columns>
            <Column>
              <header>
                <Text text="Supplier Name"/>
              </header>
            </Column>

            <Column>
              <header>
                <Text text="City"/>
              </header>
            </Column>

            <Column minScreenWidth="tablet">
              <header>
                <Text text="Since When"/>
              </header>
            </Column>

            <Column minScreenWidth="tablet" demandPopin="true">
              <header>
                <Text text="Contact Person"/>
              </header>
            </Column>                                    
          </columns>

          <items>
            <ColumnListItem type="Navigation" >
              <cells>
                <Text text="{name}"></Text>
                <Input value="{city}" showValueHelp="true" valueHelpRequest="onValueHelpRequest"></Input>
                <Text text="{sinceWhen}"></Text>
                <Text text="{contactPerson}"></Text>
              </cells>

            </ColumnListItem>
          </items>
        </Table>
</core:FragmentDefinition>