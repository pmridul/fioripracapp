<mvc:View xmlns:mvc="sap.ui.core.mvc" 
        xmlns="sap.m" 
        xmlns:t="sap.ui.table" 
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"       
        xmlns:core="sap.ui.core" 
        controllerName="CoreChange.ABAP.first.controller.addproduct">
        <Page>
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Create Product"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Product ID" />
				<Input id="idProd" 
                       value="{local>/productSet/PRODUCT_ID}" 
                       change="onProdChange"
                        />
				<Button text="Most Exp Prod" press="onMostExp" tooltip="most exp prod in the system"></Button>
				<Label text="Name" />
				<Input value="{local>/productSet/NAME}">
				</Input>
				<Input value="{local>/productSet/DESCRIPTION}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="Supplier ID" />
				<Input value="{local>/productSet/SUPPLIER_ID}"
				       valueHelpRequest="onF4Help"
					   showValueHelp="true">
				</Input>
				<Text id="idSuplTxt"></Text>

				<Label text="Price / Currency" />
                <Input value="{local>/productSet/PRICE}"/>
				<Input value="{local>/productSet/CURRENCY_CODE}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
			</f:content>
		</f:SimpleForm>
	</VBox>

    <footer>
    <Toolbar >
        <ToolbarSpacer ></ToolbarSpacer>
        <Button id="idBtnSave" text="Save" press="onSave"></Button>
		<Button id="idBtnClear" text="Clear" press="onClear"></Button>
		<Button id="idBtnDel" text="Delete" type="Reject" press="OnDelete"></Button>
    </Toolbar>
    </footer>
    </Page>
</mvc:View>        